{
  "name": "@forminator/react-wire",
  "description": "connect react components with wire",
  "version": "0.3.0",
  "license": "MIT",
  "main": "lib/forminator-react-wire.js",
  "unpkg": "dist/forminator-react-wire.js",
  "module": "es/forminator-react-wire.js",
  "typings": "./index.d.ts",
  "files": [
    "dist",
    "lib",
    "es",
    "src",
    "index.d.ts",
    "tsdoc-metadata.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/forminator/react-wire"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "libton-script build",
    "build:doc": "libton-script doc",
    "toc": "markdown-toc -i README.md",
    "test": "libton-script test",
    "lint": "libton-script lint",
    "format": "libton-script format",
    "format:check": "libton-script format --check",
    "validate": "libton-script lint && libton-script format --check && libton-script test",
    "prepublishOnly": "yarn validate && yarn build",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.26",
    "@types/react-dom": "^16.9.5",
    "@types/testing-library__react-hooks": "^3.2.0",
    "husky": "^4.2.3",
    "libton-script": "^0.12.2",
    "lint-staged": "^10.0.9",
    "markdown-toc": "^1.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-test-renderer": "^16.13.1",
    "standard-version": "^7.1.0"
  },
  "dependencies": {
    "mitt": "^1.2.0"
  },
  "peerDependencies": {
    "react": "^16.10.0",
    "react-dom": "^16.10.0"
  }
}
